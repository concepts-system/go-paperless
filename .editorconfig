root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120

[*.go]
indent_style = tab
tab_width = 4

[*.md]
indent_size = 2
tab_width = 2

[makefile]
indent_style = tab
tab_width = 4
